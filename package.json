{
  "name": "math-marauders",
  "version": "1.0.0",
  "description": "Math Marauders is a wave-based flock runner that combines procedural math gates with light combat and retreat mechanics.",
  "type": "module",
  "scripts": {
    "start": "npx http-server . -c-1",
    "format": "prettier --write --ignore-unknown \"src/**/*.{js,css}\" index.html README.md",
    "lint": "eslint \"src/**/*.js\"",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest",
    "check:all": "npm run lint",
    "validate:all": "npm run test"
  },
  "keywords": [
    "math",
    "game",
    "boids",
    "threejs",
    "procedural"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "eslint": "^9.11.1",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3"
  }
}
